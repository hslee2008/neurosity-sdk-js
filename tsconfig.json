{
  "compilerOptions": {
    "target": "ES2015",
    "module": "ES2020",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2020", "dom"],
    "strict": false,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "dist", "examples"]
}

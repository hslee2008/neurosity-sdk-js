{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["es2020", "dom"],
    "strict": false,
    "declaration": true,
    "pretty": true,
    "newLine": "lf",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "examples"]
}
